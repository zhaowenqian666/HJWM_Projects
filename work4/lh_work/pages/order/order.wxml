<view class="order_header">
   <view class="order_header_first">{{department}}</view>
   <view class="order_header_second">{{name}}</view>
</view>  

<form bindsubmit="submitdate">    
<view class="weui-cells weui-cells_after-title">
       <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">预约日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{date}}" start="2018-10-01" end="2020-09-01" bindchange="bindDateChange">
                        <view class="weui-input">{{orderdate}}</view>
                    </picker>
                </view>
       </view>
       <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">开始时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                        <view class="weui-input">{{starttime}}</view>
                    </picker>
                </view>
        </view>
        <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">结束时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindendTimeChange">
                        <view class="weui-input">{{endtime}}</view>
                    </picker>
                </view>
        </view>

  <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">国家/地区</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindReasonChange" value="{{ reasonIndex}}" range="{{ reasons}}">
                        <view class="weui-select weui-select_in-select-after">{{ reasons[reasonIndex]}}</view>
                    </picker>
                </view>
            </view>
</view>
<button  form-type="submit" class="weui-btn sure_btn" type="primary">确定</button>
</form>

